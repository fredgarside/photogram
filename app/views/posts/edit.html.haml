.post-wrapper 
  .posts-wrapper.row
    .post
      .post-head
        .name
          = @post.user.user_name
      .image.center-block
        =image_tag @post.image.url(:medium)
      %p.caption
        =@post.caption
      .text-center

    = render 'form'
    .text-center.edit-links
      = link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }
      |
      = link_to "cancel", posts_path 

